#!/usr/bin/env python
import insightconnect_plugin_runtime
from komand_haloitsm import connection, actions, triggers

Name = "HaloITSM"
Vendor = "derricksmith"
Version = "1.0.7"
Description = "Manage tickets and automate workflows with HaloITSM service desk"


class ICONHaloitsm(insightconnect_plugin_runtime.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
            name=Name,
            vendor=Vendor,
            version=Version,
            description=Description,
            connection=connection.Connection()
        )
        # Add actions
        self.add_action(actions.CreateTicket())
        self.add_action(actions.UpdateTicket())
        self.add_action(actions.GetTicket())
        self.add_action(actions.SearchTickets())
        self.add_action(actions.CloseTicket())
        self.add_action(actions.AssignTicket())
        self.add_action(actions.AddComment())
        
        # Add triggers
        self.add_trigger(triggers.TicketCreated())
        self.add_trigger(triggers.TicketUpdated())
        self.add_trigger(triggers.TicketStatusChanged())


def main():
    """Run plugin"""
    cli = insightconnect_plugin_runtime.CLI(ICONHaloitsm())
    cli.run()


if __name__ == "__main__":
    main()
